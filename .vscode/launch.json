{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch Client",
      "type": "extensionHost",
      "request": "launch",
      "runtimeExecutable": "${execPath}",
      "args": [
        "--extensionDevelopmentPath=${workspaceRoot}"
      ],
      "outFiles": [
        "${workspaceRoot}/out/**/*.js",
      ],
      "preLaunchTask": {
        "type": "npm",
        "script": "watch"
      }
    },
  ],
	"compounds": [
		{
			"name": "Client + Server",
			"configurations": ["Launch Client", "Attach"], //"Attach" is in ember-language-server project
      "stopAll": true,
		}
	]
}
